{
    "variables": {
        "vm_name": "ubuntu-server",
        "cpus": "2",
        "memory": "2048",

        "ssh_username": null,
        "ssh_password": null,
        "ssh_public_key_path": null,

        "base_image_directory": null,
        "base_image_name": "ubuntu-base",
        "vm_output_directory": null
    },
    "builders": [{
        "boot_command": [
            "<enter>"
        ],
        "type": "hyperv-vmcx",
        "clone_from_vmcx_path": "{{ user `base_image_directory` }}/{{ user `base_image_name` }}",
        "output_directory": "{{ user `vm_output_directory` }}/{{ user `vm_name` }}",

        "vm_name": "{{user `vm_name` }}",
        "memory": "{{user `memory`}}",
        "cpus": "{{user `cpus`}}",

        "communicator": "ssh",
        "ssh_username": "{{user `ssh_username`}}",
        "ssh_password": "{{user `ssh_password`}}",
        "ssh_timeout": "4h",

        "boot_wait": "5s",
        "shutdown_command": "echo {{user `ssh_password`}} | sudo -S -E shutdown -P now"
    }],
    "provisioners": [{
            "type": "file",
            "source": "{{user `ssh_public_key_path`}}",
            "destination": "/home/{{user `ssh_username`}}/authorized_keys"
        },
        {
            "environment_vars": [
                "DEBIAN_FRONTEND=noninteractive",
                "SSH_USERNAME={{user `ssh_username`}}",
                "SSH_PASSWORD={{user `ssh_password`}}",
                "VM_HOSTNAME={{user `vm_name`}}"
            ],
            "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "scripts/hostname.sh",
                "scripts/update.sh",
                "scripts/server.sh",
                "scripts/moveSshPublicKey.sh",
                "scripts/removeRootPassword.sh"
            ],
            "type": "shell",
            "expect_disconnect": "true"
        }
    ]
}